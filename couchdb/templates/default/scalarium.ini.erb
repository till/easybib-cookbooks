[couchdb]
database_dir = <%= node["couchdb"]["datadir"]%>
view_index_dir = <%= node["couchdb"]["viewdir"]%>

[httpd]
port = <%= node["couchdb"]["port"]%>
bind_address = 0.0.0.0

[log]
file = <%= node["couchdb"]["logdir"]%>/couch.log
level = error
include_sasl = true

<% if !node["couchdb"]["admins"].empty? -%>
[admins]
<% node["couchdb"]["admins"].each do |user,pass| %>
<%= "#{user} = #{pass}" %>
<% end %>
<% end -%>
