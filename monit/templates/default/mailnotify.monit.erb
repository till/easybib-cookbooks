set mailserver <%= @host %> port <%= @port %>
  username <%= @mailuser %>
  password <%= @mailpass %>
  using TLSV1

set mail-format {
  from: <%= @mailsender %>
  reply-to: <%= @mailsender %>
}
<% @recipients.each do |recipient_address| -%>
set alert <%= recipient_address %> but not on { pid ppid nonexist instance timestamp }
<% end -%>
