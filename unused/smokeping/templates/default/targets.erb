*** Targets ***
probe = FPing
menu = <%= @menu['menu'] %>
title = <%= @menu['title'] %>
remark = <%= @menu['remark'] %>

<%
@targets.each do |groupname, group|
-%>
+ <%= groupname %>
menu = <%= groupname %>
title = <%= groupname %>
<%    
  group.each do |target|
-%>
++ <%= target['menu'] %>
probe = <%= target['probe'] %>
host = <%= target['host'] %>
title = <%= target['title'] %>
<% if target['port'] %>
port = <%= target['port'] %>
<% end %>
<% if target['urlformat'] %>
urlformat = <%= target['urlformat'] %>
<% end %>
<% if target['extraargs'] %>
extraargs = <%= target['extraargs'] %>
<% end 
  end
end
-%>
