newrelic:
  license_key: '<%=@license_key%>'
  verbose: <%=@verbose%>

agents:
<% @frontends.each do |frontend| -%>
  <%=frontend["name"]%>:
    uri: http://127.0.0.1<%=@url%>;csv
    proxy: <%=frontend["proxy"]%>
    proxy_type: FRONTEND
    user: <%=@haproxy_user%>
    password: <%=@haproxy_pass%>
<% end -%>

<% @backends.each do |backend| -%>
  <%=backend["name"]%>:
    uri: http://127.0.0.1<%=@url%>;csv
    proxy: <%=backend["proxy"]%>
    proxy_type: BACKEND
    user: <%=@haproxy_user%>
    password: <%=@haproxy_pass%>
<% end -%>
