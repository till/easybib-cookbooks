### BEGIN INIT INFO
# Provides:          gearmand
# Required-Start:    $network $remote_fs $syslog
# Required-Stop:     $network $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start daemon at boot time
# Description:       Enable gearman job server
### END INIT INFO

prefix=<%=@prefix%>
exec_prefix=${prefix}
DAEMON=${exec_prefix}/sbin/gearmand
NAME=<%=@name%>
PIDDIR=/var/run/$NAME
PIDFILE=${PIDDIR}/$NAME.pid
GEARMANUSER="<%=@user%>"
PARAMS=""

test -x ${DAEMON} || exit 0

. /lib/lsb/init-functions

test -f /etc/default/$NAME && . /etc/default/$NAME

status()
{
  G_COUNT=$(ps aux|grep [g]earmand|wc -l)
  if [ -f $PIDFILE ]; then
    G_PID=$(cat $PIDFILE)
  fi
  if [ "$G_COUNT" -gt 0 ]; then
    echo "${NAME} is running ${G_PID}"
  else
    echo "${NAME} is not running"
  fi
}

start()
{
  log_daemon_msg "Starting Gearman Server" "${NAME}"
  if [ ! -d ${PIDDIR} ]; then
    mkdir ${PIDDIR}
    chown ${GEARMANUSER} ${PIDDIR}
  fi
  if start-stop-daemon \
    --start \
    --exec $DAEMON \
    -- --pid-file=$PIDFILE \
       --user=$GEARMANUSER \
       --daemon \
       $PARAMS 
  then
    log_end_msg 0
  else
    log_end_msg 1
    log_warning_msg "Please take a look at the syslog"
    exit 1
  fi
}

stop()
{
  log_daemon_msg "Stopping Gearman Server" "${NAME}"
  if start-stop-daemon \
    --stop \
    --oknodo \
    --exec $DAEMON \
    --pidfile $PIDFILE
  then
    log_end_msg 0
  else
    log_end_msg 1
    exit 1
  fi
}

case "$1" in

  start)
    start
  ;;

  stop)
    stop
  ;;

  status)
    status
  ;;

  restart|force-reload)
    stop
    start
  ;;

  *)
    echo "Usage: $0 {start|stop|restart|force-reload|status}"
  ;;

esac
