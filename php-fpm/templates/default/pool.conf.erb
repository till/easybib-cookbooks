[<%= @pool_name %>]

listen = <%= @socket_dir %>/<%= @pool_name %>
listen.backlog = -1

listen.owner = <%= @user %>
listen.group = <%= @group %>
listen.mode = 0666

user = <%= @user %>
group = <%= @group %>

pm = dynamic
pm.max_children = 8
pm.start_servers = 4
pm.min_spare_servers = 4
pm.max_spare_servers = 8
pm.max_requests = 128
pm.status_path = /fpm_status_<%= @pool_name %>

ping.path = /fpm_ping_<%= @pool_name %>
ping.response = p0ng

;request_terminate_timeout = 0
request_slowlog_timeout = <%= @slowlog_timeout %>

slowlog = <%= @slowlog %>

catch_workers_output=1
